/* components/hotTrack/hotTrack.wxss */
.hotTrack {
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.box {
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #F7F7F7;
  margin-bottom: 25rpx;
}
.userSth {
  display: flex;
  align-items: center;
}
.userSth>.userAva {
  flex: 0 0 80rpx;
}
.userSth>.userAva image {
  width: 100%;
  height: 80rpx;
  border-radius: 50%;
  object-fit: cover;
}
.userSth>.userName {
  flex: 1 0 auto;
  padding-left: 40rpx;
  font-size: 35rpx;
  color: #666666;
}

.contentSth {
  padding: 0 20rpx;
}
.contentSth>.contentImg image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}
.contentSth>.contentTitle {
  font-size: 35rpx;
  color: #666666;
}
.contentSth>.contentOth {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.contentSth>.contentOth>.left>.comment {
  font-size: 25rpx;
  color: #999999;
}
.contentSth>.contentOth>.left>.like {
  font-size: 25rpx;
  color: #999999;
  margin-left: 30rpx;
}
.contentSth>.contentOth>.time {
  font-size: 25rpx;
  color: #999999;
}