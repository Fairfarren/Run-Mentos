/* components/activityCom/activityCom.wxss */
.activityCom {
  margin-top: 20rpx;
}
.box {
  display: flex;
  flex-wrap: wrap;
}
.box>navigator {
  width: 50%;
}
.small50 {
  /* width: 50%; */
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}
.small50>.img image {
  width: 100%;
  height: 200rpx;
}
.small50>.title {
  font-size: 35rpx;
  color: #555555;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top: 8rpx;
}
.small50>.people {
  font-size: 25rpx;
  color: #777777;
  margin-top: 8rpx;
}
.small50>.time {
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  color: #777777;
  margin-top: 8rpx;
}